<Window x:Class="Compression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compression" Height="350" Width="525" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="213*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="195*"/>
            <ColumnDefinition Width="322*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="#FF3A00FF" Opacity="0.5"/>
        </Grid.Background>
        <Button Content="Compress" HorizontalAlignment="Left" Margin="78,47,0,0" VerticalAlignment="Top" Width="138" Height="50" FontSize="20" Click="Button_Click_1" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Button Content="Decompress" HorizontalAlignment="Left" Margin="141,47,0,0" VerticalAlignment="Top" Width="138" Height="50" FontSize="20" Click="Button_Click_2" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="screen" HorizontalAlignment="Left" Height="218" Margin="78,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396" FontSize="18" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
